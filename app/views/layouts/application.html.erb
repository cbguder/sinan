<%	adminmenu = [ 'buildings' ]
	sidemenu =  [ ]
	dashmenu =  [ ]
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
   "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
	<title><%=h COMPANY_NAME %> » <%=h t(controller.controller_name) %><%=h ' » ' + t(controller.action_name) if controller.action_name != 'index' %></title>
	<%= stylesheet_link_tag 'admin_common', :media => 'all' %>
	<%= stylesheet_link_tag 'admin', :media => 'all' %>
	<%= stylesheet_link_tag 'sinan', :media => 'all' %>
	<%= javascript_include_tag :defaults %>
	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&language=tr&region=TR"></script>
</head>
<body onload="init();">
<div id="container">
	<div id="header">
		<div id="wphead"><h1><%=h COMPANY_NAME %></h1></div>
		<div id="user_info"><p>Merhaba, <%=h current_user.name %>! | <%= link_to 'Çıkış', logout_url %></div>
		<ul id="dashmenu"><%= controllers_menu(dashmenu) %></ul>
		<ul id="adminmenu"><%= controllers_menu(adminmenu) %></ul>
		<ul id="sidemenu"><%= controllers_menu(sidemenu) %></ul>
		<ul id="submenu"><%= actions_menu() %></ul>
	</div>
	<div id="content">
<%- for k,v in flash -%>
		<div class="<%=h k %> fade"><%=h v %></div>
<%- end -%>
<%= yield  %>
	</div>
</div>
</body>
</html>
